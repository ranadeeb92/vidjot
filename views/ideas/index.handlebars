{{#each ideas}}
  <div class="card card-body mb-2">
    <h4>{{title}}</h4>
    <p>{{details}}</p>
    <a href="/ideas/edit/{{id}}" class="btn btn-dark btn-block">Edit</a>
    <form action="/ideas/delete/{{id}}?_method=DELETE" method="POST" class="mt-2">
    <input type="hidden" name="_method" value="DELETE">
    <button type="submit" class="btn btn-dark btn-block">DELETE</button>
    </form>
  </div>
{{else}}
 <p>No video ideas listed</p>
{{/each}}