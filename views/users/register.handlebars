
<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
    <img  class="logo" src="/img/Comic.png" alt="nicolas">
    <h3 class="text-center">Account Register</h3>
    <form action="/users/register" method="POST">
       <div class="form-group">
        <label for="name">Name</label>
        <input type="name" class="form-control" required name="name" value="{{name}}" id="">
      </div>
       <div class="form-group">
        <label for="email">Email</label>
        <input type="email" class="form-control" required name="email" value="{{email}}" id="">
      </div>
      <div class="form-group">
        <label for="password">password</label>
        <input type="password" class="form-control" required name="password" value="{{password}}" id="">
      </div>
       <div class="form-group">
        <label for="password2">confirm password</label>
        <input type="password" class="form-control" required name="password2" value="{{password2}}" id="">
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
    </form>
  </div>
</div>
</div>